SubDir TOP apps tests vostest ;

if $(VOS.AVAILABLE) = "yes"
{
Help vostest : "Crystal Space VOS support test" ;
Application vostest : [ Wildcard *.cpp *.h ] : noinstall ;
CFlags vostest :
  [ FDefines _REENTRANT ] $(COMPILER.C++FLAGS.EXCEPTIONS.ENABLE) ;
LinkWith vostest : csgeom csgfx cstool csutil ;
ExternalLibs vostest : VOS  ;
}
