SubDir TOP include ;

rule ScanHeaders
{
  local _dir = [ FDirName $(TOP) include $(<) ] ;
  local _i, _files = [ GLOB $(_dir) : * ] ;

  for _i in $(_files)
  {
    if $(_i:S) = ".h"
    {
      SEARCH on $(_i:BSG=header_$(<)) = $(_dir) ;
      InstallHeader $(_i:BSG=header_$(<)) : $(<) ;
    }
    else
    {
      if $(_i:BS) != $(DOT) && $(_i:BS) != $(DOTDOT)
      {
	ScanHeaders [ FDirName $(<) $(_i:BS) ] ;
      }
    }
  }
}

ScanHeaders ;
