SubDir TOP libs csengine ;

Library csengine :
	[ Wildcard *.cpp *.h ]
	[ Wildcard basic : *.cpp *.h ]
	[ Wildcard light : *.cpp *.h ]
	[ Wildcard objects : *.cpp *.h ]
        [ Wildcard ../../include/csengine : *.h ]
;

Help csengine : "Crystal Space 3D engine" ;
LibDepends csengine : cstool csgfx csgeom csutil ;

InstallConfig engine.cfg ;

