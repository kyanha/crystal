SubDir TOP libs csplugincommon directx ;

if $(DIRECTX.AVAILABLE) = "yes"
{
Description csplugincommon_dx : "DirectX-specific common plugin classes" ;
Library csplugincommon_dx : 
  [ Wildcard *.cpp *.h ] 
  [ Wildcard
    [ ConcatDirs $(DOTDOT) $(DOTDOT) include csplugincommon directx ] : *.h ]
  : shared ;
LibDepends csplugincommon_dx : csplugincommon csgfx csutil ;
ExternalLibs csplugincommon_dx : DIRECTX ;
}
