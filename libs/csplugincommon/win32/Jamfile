SubDir TOP libs csplugincommon win32 ;

if $(TARGET.OS) = "WIN32"
{
Description csplugincommon_w32 : "Windows-specif common plugin classes" ;
Library csplugincommon_w32 : 
  [ Wildcard *.cpp *.h ] 
  [ Wildcard
    [ ConcatDirs $(DOTDOT) $(DOTDOT) include csplugincommon win32 ] : *.h ]
  : shared ;
LibDepends csplugincommon_w32 : csplugincommon csgfx csutil ;
}
