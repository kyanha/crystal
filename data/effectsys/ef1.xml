<effects xmlns="http://tempuri.org/XMLFile1.xsd">
	<effect name="rainbow">
		<variable type="vec4" default="1,0,0,0" name="color" />
		<variable type="float" default="0.4" name="multiple" />
		<technique>
			<quality>10</quality>
			<pass>
				<blending>enabled</blending>
				<shading>smooth</shading>
				<sourceblend>one</sourceblend>
				<destinationblend>zero</destinationblend>
				<vertexcolor>mesh</vertexcolor>
				<vertexprogram>/effect/ms.nvv</vertexprogram>
				<vertexprogramconstant number="4">color</vertexprogramconstant>
				<vertexprogramconstant number="5">multiple</vertexprogramconstant>
				<layer>
					<texturesource>1</texturesource>
					<texturecoordinatesource>mesh</texturecoordinatesource>
					<colorsource1>vertex color</colorsource1>
					<colormodifier1>source color</colormodifier1>
					<coloroperation>use source 1</coloroperation>
					<alphasource1>previous layer alpha</alphasource1>
					<alphamodifier1>source alpha</alphamodifier1>
					<alphaoperation>multiply</alphaoperation>
				</layer>
			</pass>
		</technique>
	</effect>
</effects>
