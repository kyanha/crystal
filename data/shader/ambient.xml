<shader name="ambient">
  <!-- This should be defined by renderloop somehow and track sector ambient -->
  <declare name="STANDARD_LIGHT_AMBIENT" type="vector3" default="0.2, 0.2, 0.4" />
	<technique priority="50">
		<pass>
		  <mixmode><copy/></mixmode>
			<streammapping stream="vertices" destination="position" />
			<streammapping stream="texture coordinates" destination="texture coordinate" />
			<vp type="gl_fixed_vp" file="/shader/ambient.fvp"/>
			<texturemapping unit="0" name="tex diffuse" />
			<fp type="gl_fixed_fp">
        <fixedfp>
          <layer>
            <colorsource num="0" source="primary color" modifier="color"/>
            <colorsource num="1" source="texture" modifier="color"/>
            <coloroperation operation="modulate"/>
          </layer>
        </fixedfp>
      </fp>
		</pass>
	</technique>
</shader>
