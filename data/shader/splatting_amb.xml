<shader name="splatting_ambient">
  <shadervars>
    <shadervar name="STANDARD_LIGHT_AMBIENT" type="vector3">1, 1, 1</shadervar>
  </shadervars>
  <technique priority="50">
    <pass>
      <mixmode><add/></mixmode>
      <streammapping stream="vertices" destination="attribute 0" />
      <streammapping stream="texture coordinates" destination="attribute 1" />
      <vp type="gl_arb_vp" file="/shader/splatting_amb.avp" />
      <texturemapping unit="0" name="tex diffuse"/>
      <texturemapping unit="1" name="splat alpha map"/>
      <fp type="gl_fixed_fp">
        <fixedfp>
          <layer>
            <colorsource num="0" source="primary color" modifier="color"/> 
            <colorsource num="1" source="texture" modifier="color"/> 
            <coloroperation operation="modulate"/>
          </layer>
          <layer>
            <colorsource num="0" source="previous layer" modifier="color"/>
            <colorsource num="1" source="texture" modifier="color"/>
            <coloroperation operation="modulate"/>
          </layer>
        </fixedfp>
      </fp>
    </pass>
  </technique>
</shader>
