<combinerlibrary>
  <coercion from="rgb" to="rgba" cost="1">
    <input name="input" type="rgb" />

    <block location="fragmentMain">
      output = float4 (input, 1);
    </block>

    <block location="vertexMain">
      output = float4 (input, 1);
    </block>
    
    <output name="output" type="rgba" />
  </coercion>
</combinerlibrary>