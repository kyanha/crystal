<shader compiler="xmlshader" name="depthwrite" lights="0">

  <technique priority="200" lights="0">
    <pass>
      
      <mixmode>
        <alphatest>disable</alphatest>
      </mixmode>
      <writemask r="false" g="false" b="false" a="false" />

      <vp plugin="glcg">
        <cgvp>
          <program>
            struct app2vertex
            {
              float3 Position : POSITION;
            };

            struct vertex2fragment
            {
              float4 Position : POSITION;
            };

            vertex2fragment main(app2vertex IN,
                                 uniform float4x4 ModelViewProj : state.matrix.mvp)
            {
              vertex2fragment OUT;
              OUT.Position = mul (ModelViewProj, float4 (IN.Position, 1.0));
              return OUT;
            }
          </program>
        </cgvp>
      </vp>

      <fp plugin="glcg">
        <cgfp>
          <program>
            float4 main() : COLOR
            {
              return float4 (0, 0, 0, 1);
            }
          </program>
        </cgfp>
      </fp>

    </pass>
  </technique>

</shader>
