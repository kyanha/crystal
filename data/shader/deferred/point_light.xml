<shader compiler="shaderweaver" name="deferred_point_light">
  <alias name="use_buffer" file="/shader-snippets/deferred/use_gbuffer.xml" />
  <alias name="lighting" file="/shader-snippets/deferred/point.xml" />

  <technique priority="300">
    <pass>
      <combiner plugin="crystalspace.graphics3d.shader.combiner.glsl" />

      <mixmode><add /></mixmode>

      <snippet id="shared" file="/shader-snippets/deferred/accumulation-shared.xml" />
    </pass>
  </technique>

  <technique priority="200">
    <pass>
      <combiner plugin="crystalspace.graphics3d.shader.combiner.glcg" />

      <mixmode><add /></mixmode>

      <snippet id="shared" file="/shader-snippets/deferred/accumulation-shared.xml" />
    </pass>
  </technique>
</shader>
