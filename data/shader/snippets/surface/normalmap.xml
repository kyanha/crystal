<snippet>
  <technique priority="100">
    <combiner name="cg" plugin="crystalspace.graphics3d.shader.combiner.glcg" />
    
    <input file="/shader/snippets/texCoord.inp"	
      condition='vars."tex normal".texture' />
    
    <input name="texNormal" type="tex2d" default="complex"
	condition='vars."tex normal".texture'>
      <block location="pass">
	<texture name="tex normal" destination="fragmentIn.texNormal" />
      </block>
      
      <block location="cg:fragmentIn">
	<uniform type="tex2d" name="texNormal" />
      </block>
      
      <block location="cg:fragmentMain">
	texNormal = fragmentIn.texNormal;
      </block>
    </input>
    
    <block location="cg:fragmentMain">
    <?if vars."tex normal".texture ?>
      normal = tex2D (texNormal, texCoord).xyz*2-1;
      normal_attr_perfragment = true;
    <?else?>
      normal = float3 (0, 0, 1);
      normal_attr_perfragment = false;
    <?endif?>
    </block>
    
    <block location="cg:vertexMain">
      normal = float3 (0, 0, 1);
    <?if vars."tex normal".texture ?>
      normal_attr_perfragment = true;
    <?else?>
      normal_attr_perfragment = false;
    <?endif?>
    </block>
    
    <output name="normal" type="direction_tangent">
      <attribute name="perfragment" type="bool" />
    </output>
  </technique>
</snippet>
