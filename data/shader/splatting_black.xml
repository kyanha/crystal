<shader name="splatting_black">
  <!-- This should be defined by renderloop somehow and track sector ambient -->
  <technique priority="100">
    <pass>
      <mixmode><copy/></mixmode>
      <streammapping stream="vertices" destination="attribute 0" />
      <vp type="gl_arb_vp" file="/shader/ambient.avp"/>
      <texturemapping unit="0" name="tex diffuse" />
      <fp type="gl_fixed_fp">
        <fixedfp>
          <layer>
            <colorsource num="0" source="primary color" modifier="color"/>
            <coloroperation operation="replace"/>
          </layer>
        </fixedfp>
      </fp>
    </pass>
  </technique>
</shader>
