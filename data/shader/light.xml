<shader name="light">
    <technique priority="200">
        <pass>
            <writemask r="false" g="false" b="false" a="true"/>
            <mixmode><copy/></mixmode>
            <streammapping stream="vertices" destination="attribute 0" />
            <vp type="gl_arb_vp" file="/shader/flat_ppl_attenuation.avp"/>
            <texturemapping unit="0" name="standardtex attenuation" />
            <texturemapping unit="1" name="standardtex attenuation" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <alphasource num="0" source="texture" modifier="alpha"/>
                        <alphaoperation operation="replace"/>
                    </layer>
                    <layer>
                        <alphasource num="0" source="texture" modifier="alpha"/>
                        <alphasource num="1" source="previous layer" modifier="alpha"/>
                        <alphaoperation operation="modulate" scale="2"/>
                    </layer>
                  </fixedfp>
            </fp>
        </pass>
        <pass>
            <mixmode><destalphaadd/></mixmode>
            <streammapping stream="vertices" destination="attribute 0" />
            <streammapping stream="normals" destination="attribute 2" />
            <streammapping stream="texture coordinates" destination="attribute 3" />
            <vp type="gl_arb_vp" file="/shader/flat_ppl_diffuse.avp"/>
            <texturemapping unit="0" name="standardtex normalization map" />
            <texturemapping unit="1" name="standardtex normalization map" />
            <texturemapping unit="2" name="tex diffuse" />
            <texturemapping unit="3" name="tex diffuse" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <colorsource num="0" source="texture" modifier="color"/>
                        <coloroperation operation="replace"/>
                    </layer>
                    <layer>
                        <colorsource num="0" source="previous layer" modifier="color"/>
                        <colorsource num="1" source="texture" modifier="color"/>
                        <coloroperation operation="dot3"/>
                    </layer>
                    <layer>
                        <colorsource num="0" source="previous layer" modifier="color"/>
                        <colorsource num="1" source="texture" modifier="color"/>
                        <coloroperation operation="modulate"/>
                    </layer>
                    <layer>
                        <colorsource num="0" source="previous layer" modifier="color"/>
                        <colorsource num="1" source="primary color" modifier="color"/>
                        <coloroperation operation="modulate"/>
                    </layer>
                </fixedfp>
            </fp>
        </pass>
    </technique>
  
  
    
    <technique priority="150">
        <pass>
            <writemask r="false" g="false" b="false" a="true"/>
            <mixmode><copy/></mixmode>
            <streammapping stream="vertices" destination="attribute 0" />
            <vp type="gl_arb_vp" file="/shader/flat_ppl_attenuation.avp"/>
            <texturemapping unit="0" name="standardtex attenuation" />
            <texturemapping unit="1" name="standardtex attenuation" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <alphasource num="0" source="texture" modifier="color"/>
                        <alphaoperation operation="replace"/>
                    </layer>
                    <layer>
                        <alphasource num="0" source="texture" modifier="color"/>
                        <alphasource num="1" source="previous layer" modifier="color"/>
                        <alphaoperation operation="modulate" scale="2"/>
                    </layer>
                </fixedfp>
            </fp>
        </pass>
        <pass>
            <mixmode><multiply/></mixmode>
            <writemask r="false" g="false" b="false" a="true"/>
            <streammapping stream="vertices" destination="attribute 0" />
            <streammapping stream="normals" destination="attribute 2" />
            <vp type="gl_arb_vp" file="/shader/flat_ppl_diffuse_a.avp"/>
            <texturemapping unit="0" name="standardtex normalization map" />
            <texturemapping unit="1" name="standardtex normalization map" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <colorsource num="0" source="texture" modifier="color"/>
                        <coloroperation operation="replace"/>
                    </layer>
                    <layer>
                        <colorsource num="0" source="previous layer" modifier="color"/>
                        <colorsource num="1" source="texture" modifier="color"/>
                        <coloroperation operation="dot3 alpha"/>
                    </layer>
                </fixedfp>
            </fp>
        </pass>
        <pass>
            <mixmode><destalphaadd/></mixmode>
            <streammapping stream="vertices" destination="attribute 0" />
            <streammapping stream="texture coordinates" destination="attribute 3" />
            <vp type="gl_arb_vp" file="/shader/flat_ppl_diffuse_b.avp"/>
            <texturemapping unit="0" name="tex diffuse" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <colorsource num="0" source="primary color" modifier="color"/>
                        <colorsource num="1" source="texture" modifier="color"/>
                        <coloroperation operation="modulate"/>
                    </layer>
                </fixedfp>
            </fp>
        </pass>
    </technique>
    
    
    
    <technique priority="100">
        <pass>
            <mixmode><add/></mixmode>
            <streammapping stream="vertices" destination="attribute 0" />
            <streammapping stream="colors" destination="attribute 1" />
            <streammapping stream="normals" destination="attribute 2" />
            <streammapping stream="texture coordinates" destination="attribute 3" />
            <vp type="gl_arb_vp" file="/shader/vertexlight.avp"/>
            <texturemapping unit="0" name="tex diffuse" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <colorsource num="0" source="primary color" modifier="color"/>
                        <colorsource num="1" source="texture" modifier="color"/>
                        <coloroperation operation="modulate"/>
                    </layer>
                </fixedfp>
            </fp>
        </pass>
    </technique>
    
    
    
    <technique priority="50">
        <pass>
            <mixmode><add/></mixmode>
            <streammapping stream="vertices" destination="position" />
            <streammapping stream="normals" destination="normal" />
            <streammapping stream="texture coordinates" destination="texture coordinate" />
            <vp type="gl_fixed_vp" file="/shader/vertexlight.fvp"/>
            <texturemapping unit="0" name="tex diffuse" />
            <fp type="gl_fixed_fp">
                <fixedfp>
                    <layer>
                        <colorsource num="0" source="primary color" modifier="color"/>
                        <colorsource num="1" source="texture" modifier="color"/>
                        <coloroperation operation="modulate"/>
                    </layer>
                </fixedfp>
            </fp>
        </pass>
    </technique>



    <technique priority="0">
        <pass>
            <mixmode><copy/></mixmode><!-- for now -->
            <streammapping stream="vertices" destination="position" />
            <streammapping stream="normals" destination="normal" />
            <streammapping stream="texture coordinates" destination="texture coordinate" />
            <streammapping stream="colors" destination="color" />
            <vp type="soft_vp" />
            <fp type="soft_fp" />
        </pass>
    </technique>
</shader>
