<snippet type="compound">
  <technique priority="200">
    <combiner plugin="crystalspace.graphics3d.shader.combiner.glcg" />

    <alias name="use_buffer" weak="yes" file="/shader-snippets/deferred/use_gbuffer.xml" />

    <snippet id="position" file="/shader-snippets/position.xml" />
    <snippet id="use_buffer" filealias="use_buffer" />
    <snippet id="specular" file="/shader-snippets/surface/specular-none.xml" />
    <snippet id="upcast">
      <technique priority="100">
        <combiner name="cg" plugin="crystalspace.graphics3d.shader.combiner.glcg" />
        <combiner name="glsl" plugin="crystalspace.graphics3d.shader.combiner.glsl" />

        <input name="value" type="rgb" />
        <output name="result" type="rgba" />

        <block location="glsl:fragmentMain">
          result = vec4(value,1.0);
        </block>

        <block location="cg:fragmentMain">
          result = float4(value,1.0);
        </block>
      </technique>
    </snippet>

    <connection from="position" to="use_buffer" />
    <connection from="use_buffer" to="upcast">
      <explicit from="ambient" to="value" />
    </connection>

    <output snippet="upcast" name="ambient" to="color0" />
    <output snippet="specular" name="specularColor" to="color1" />
    <output snippet="use_buffer" name="depth" to="depth" />
  </technique>
</snippet>

