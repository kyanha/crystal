<input name="ModelViewProj" type="float4x4" default="complex">
  <block location="cg:vertexIn">
    <uniform type="float4x4" name="ModelViewProj" binding="state.matrix.mvp" />
  </block>
  
  <block location="cg:fragmentIn">
    #if FRAGMENT_PROGRAM_LEVEL >= 0x200
    <uniform type="float4x4" name="ModelViewProj" binding="state.matrix.mvp" />
    #endif
  </block>
  
  <block location="cg:vertexMain">
    ModelViewProj = vertexIn.ModelViewProj;
  </block>
  
  <block location="cg:fragmentMain">
    #if FRAGMENT_PROGRAM_LEVEL >= 0x200
    ModelViewProj = fragmentIn.ModelViewProj;
    #endif
  </block>

  <block location="glsl:vertexMain">
    ModelViewProj = gl_ModelViewProjectionMatrix;
  </block>
  
  <block location="glsl:fragmentMain">
    ModelViewProj = gl_ModelViewProjectionMatrix;
  </block>
</input>
