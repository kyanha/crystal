window "Splash"
{
  Frame: (0,0)-(600,400)
  Style: wfsNormal
  Options: wfoTitle+wfoGrip
  Title: "Parent window"

  connect
  {
    signalComponentCreated -> awsStandardSink::Show
  }

  component "Kid" is "Window"
  {
     Frame: (0,0)-(500,300)
     Style: wfsNormal
     Options: wfoTitle+wfoGrip
     Title: "Kid Window"

  
   
     component "AnotherKid" is "Window"
     {
        Frame: (50,50)-(300,500)
        Style: wfsNormal
        Options: wfoTitle+wfoGrip
        Title: "Kid Window 2"
	connect
	{
	  signalComponentCreated -> awsStandardSink::ShowWindow
	}

     }

  }

  component "Engine View" is "Engine View"
  {
     Frame: (50,350)-(400,500)
  }

  
}

 