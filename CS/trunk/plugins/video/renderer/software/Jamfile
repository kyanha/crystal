SubDir TOP plugins video renderer software ;

Help soft3d : "Crystal Space software 3D renderer" ;

if $(CMD.NASM) && $(TARGET.PROCESSOR) = "X86"
{
  ASMFILES = [ Wildcard i386 : *.asm *.cpp *.h ] ;
}
else
{
  ASMFILES = ;
}

Plugin soft3d :
	[ Wildcard *.cpp *.h ]
	$(ASMFILES)
;
LinkWith soft3d : renderercommon csgeom csgfx csutil ;

InstallConfig soft3d.cfg ;

CompileGroups soft3d :  drivers3d ;
