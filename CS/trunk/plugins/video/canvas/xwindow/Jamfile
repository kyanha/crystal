SubDir TOP plugins video canvas xwindow ;

if $(X11.AVAILABLE) = "yes"
{
  local XWIN_XALERT = ;

  SubInclude TOP plugins video canvas xwindow xalert_null ;

  if $(XAW.AVAILABLE) = "yes"
  {
    SubInclude TOP plugins video canvas xwindow xalert_xaw ;
    XWIN_XALERT = xalert_xaw ;
  }
  else
  {
    XWIN_XALERT = xalert_null ;
  }

  Description xwin : "X Window Plugin" ;
  Plugin xwin : [ Wildcard *.cpp *.h ] ;
  LinkWith xwin : $(XWIN_XALERT) canvascommon csgeom csutil ;
  CompileGroups xwin : canvases softcanvas ;
  if $(XFREE86VM.AVAILABLE) = "yes"
  {
    CFlags xwin : [ FDefines XFREE86VM ] ;
    ExternalLibs xwin : XFREE86VM ;
  }
  else
  {
    ExternalLibs xwin : X11 ;
  }
}
