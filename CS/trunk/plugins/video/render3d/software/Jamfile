SubDir TOP plugins video render3d software ;

Description softrender3d : "Render3D software 3D renderer" ;

if $(CMD.NASM) && $(TARGET.PROCESSOR) = "X86" && $(TARGET.PROCESSORSIZE) = "32" && ! [ Property build : projgen ]
{
  SOFTRENDER3D_ASMFILES = [ Wildcard i386 : *.asm *.cpp *.h ] ;
}
else
{
  SOFTRENDER3D_ASMFILES = ;
}

Plugin softrender3d : [ Wildcard *.cpp *.h ] $(SOFTRENDER3D_ASMFILES) ;
LinkWith softrender3d : render3dcommon csgeom csgfx csutil ;
CompileGroups softrender3d : drivers3d ;
