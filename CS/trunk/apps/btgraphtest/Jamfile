SubDir TOP apps btgraphtest ;

#if $(WX.AVAILABLE) = "yes" 
{
  Description wxsf : "wxShapeFramework library" ;
  Library wxsf : [ Wildcard graphedit wxsf : *.cpp *.h ] : notest ;
  ExternalLibs wxsf : WX ;
  CFlags wxsf :
    $(COMPILER.C++FLAGS.STRICTALIASING.DISABLE)
    $(COMPILER.C++FLAGS.WARNING.NO_NON_VIRTUAL_DTOR) ;

  IncludeDir : wxsf ;

  Description propgrid : "wxPropertyGrid library" ;
  Library propgrid : [ Wildcard wx propgrid : *.cpp *.h ] : notest ;
  ExternalLibs propgrid : WX ;
  CFlags propgrid : $(COMPILER.C++FLAGS.STRICTALIASING.DISABLE)
                    $(COMPILER.C++FLAGS.WARNING.NO_NON_VIRTUAL_DTOR) ;

  IncludeDir : propgrid ;
  
  Description graphedit : "graph editor library" ;
  Library graphedit : [ Wildcard graphedit : *.cpp *.h ] : notest ;
  ExternalLibs graphedit : CRYSTAL WX ;
  LinkWith graphedit : propgrid wxsf ;
  CFlags graphedit :
    $(COMPILER.C++FLAGS.STRICTALIASING.DISABLE)
    $(COMPILER.C++FLAGS.WARNING.NO_NON_VIRTUAL_DTOR) ;

  IncludeDir : graphedit ;
 
  Description btgraphtest : "behaviourtree graph editor Test" ;
  Application btgraphtest : [ Wildcard *.cpp *.h ]  ;
  ExternalLibs btgraphtest : CRYSTAL WX ;
  CFlags btgraphtest :
    $(COMPILER.C++FLAGS.STRICTALIASING.DISABLE)
    $(COMPILER.C++FLAGS.WARNING.NO_NON_VIRTUAL_DTOR) ;
  LinkWith btgraphtest : crystalspace propgrid wxsf graphedit ;
  Win32Resource btgraphtest : [ ConcatDirs $(SUBDIR) btgraphtest.rc ] ;
  # To locate wx.rc
  Win32RcFlags btgraphtest : [ Match ^(-I.*) ^(-D.*) : [ SplitToList $(WX.CFLAGS) ] ] ;
}

