SubDir TOP apps tools scfreg ;

Application scfreg
	: [ Wildcard *.cpp *.h ]
	: console
;
LinkWith scfreg : csgeom cssys csutil ;

Help scfreg : "Crystal Space SCF registration server" ;

# we have scfreg now, so we can use it in the jam install rules
CMD.SCFREG ?= $(BUILDTOP)/scfreg ;
Depends install_plugins : scfreg ;

