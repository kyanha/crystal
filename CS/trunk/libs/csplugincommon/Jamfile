SubDir TOP libs csplugincommon ;

{
  Description csplugincommon : "common plugin classes library" ;
  
  local subs = 
    canvas
    imageloader
    particlesys
    render3d
    renderstep
    shader
    soundloader ;
  local subinc = $(DOTDOT) $(DOTDOT) include csplugincommon ;
  local i files ;
  for i in $(subs)
  {
    files +=
      [ Wildcard $(i) : *.cpp *.h ]
      [ Wildcard [ ConcatDirs $(subinc) $(i) ] : *.h ] ;
  }
  Library csplugincommon : $(files) : shared ;
  LinkWith csplugincommon : cstool csgfx csgeom csutil ;
}

SubInclude TOP libs csplugincommon directx ;
SubInclude TOP libs csplugincommon macosx ;
SubInclude TOP libs csplugincommon opengl ;
SubInclude TOP libs csplugincommon win32 ;
