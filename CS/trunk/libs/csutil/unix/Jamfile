SubDir TOP libs csutil unix ;

{
  local rejects ;
  if $(EMBED_META) != "yes"
  {
    rejects += embedplugins.cpp ;
    CSUTIL.GENERIC += scanplugins.cpp ;
  }
  if $(LIBBFD.AVAILABLE) != "yes"
  {
    rejects += bfdplugins.cpp ;
  }
  if $(ELF_H.AVAILABLE) != "yes"
  {
    rejects += elfplugins.cpp ;
  }
  CsLibAddModule $(rejects) ;
}

CSUTIL.GENERIC +=
  appdir.cpp
  apppath.cpp
  csprocessorcap.cpp
  cspthrd.cpp
  cspthrd.h
  expandname.cpp
  findlib.cpp
  getopt.cpp
  mmap.cpp
  pathutil.cpp
  platformconfig.cpp 
  platformconfigpath.cpp
  printf.cpp
  resdir.cpp
  runloop.cpp 
  sysroot.cpp 
  vfsplat.cpp ;
