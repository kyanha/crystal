<shader compiler="shaderweaver" name="deferred_output">
  <!-- once preserving the depth buffer works this should use use_gbuffer instead -->
  <alias name="use_buffer" file="/shader-snippets/deferred/output_depth.xml" />

  <technique priority="300">
    <pass>
      <!-- Makes sure no blending occures. -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>

      <combiner plugin="crystalspace.graphics3d.shader.combiner.glsl" />

      <snippet id="shared" file="/shader-snippets/lighting/lighting_default_deferred-shared.xml" />
    </pass>
  </technique>

  <technique priority="200">
    <pass>
      <!-- Makes sure no blending occures. -->
      <mixmode>
        <blendop src="one" dst="zero" />
        <alphatest>disable</alphatest>
      </mixmode>

      <combiner plugin="crystalspace.graphics3d.shader.combiner.glcg" />

      <snippet id="shared" file="/shader-snippets/lighting/lighting_default_deferred-shared.xml" />
    </pass>
  </technique>
</shader>
