<input name="shadowClip" type="float2" default="complex">
  <block location="cg:fragmentIn">
    <uniform type="float2" name="shadowClip" />
  </block>
  
  <block location="cg:variablemap">
    <variablemap variable="light shadow clip" 
		  destination="fragmentIn.shadowClip" />
  </block>
  
  <block location="cg:fragmentMain">
    shadowClip = fragmentIn.shadowClip;
  </block>
</input>
