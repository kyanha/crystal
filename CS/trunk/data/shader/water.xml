<shader type="xmlshader" name="water">
  <shadervar>
      <define name="STANDARD_LIGHT_AMBIENT" type="vector3" default="1, 1, 1" />
  </shadervar>
  <technique priority="50">
    <pass>
      <mixmode><copy/></mixmode>
      <buffer name="vertices" destination="position" />
      <buffer name="normals" destination="normal"/>
      <vp plugin="glfixed">
        <fixedvp>  
          <environment type="reflection" mapping="cube" />
          <!--<ambient/>-->
        </fixedvp>
      </vp>
      <texture name="tex diffuse" destination="unit 0" />
      <fp plugin="glfixed">
        <fixedfp>
          <layer>
            <colorsource num="0" source="texture" modifier="color"/>
            <!--<colorsource num="1" source="texture" modifier="color"/>
            <coloroperation operation="replace"/>-->
          </layer>
        </fixedfp>
      </fp>
    </pass>
  </technique>
</shader>
