<shader name="water">
<declare name="STANDARD_LIGHT_AMBIENT" type="vector3" default="1, 1, 1" />
  <technique priority="50">
    <pass>
      <mixmode><copy/></mixmode>
      <streammapping stream="vertices" destination="position" />
      <!--<streammapping stream="texture coordinates" destination="texture coordinate" />-->
      <streammapping stream="normals" destination="normal"/>
      <vp type="gl_fixed_vp">
        <fixedvp>  
          <environment type="reflection" mapping="cube" />
          <!--<ambient/>-->
        </fixedvp>
      </vp>
      <texturemapping unit="0" name="tex diffuse" />
      <fp type="gl_fixed_fp">
        <fixedfp>
          <layer>
            <colorsource num="0" source="texture" modifier="color"/>
            <!--<colorsource num="1" source="texture" modifier="color"/>
            <coloroperation operation="replace"/>-->
          </layer>
        </fixedfp>
      </fp>
    </pass>
  </technique>
</shader>