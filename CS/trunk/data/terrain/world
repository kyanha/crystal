  </sector>
  <sequences>
    <sequence name="moveLight">
      <movelight light="sun" duration="5000"
        x="5000000" y="0" z="-6000000" />
      <delay time="5000" />
      <movelight light="sun" duration="5000"
        x="-5000000" y="0" z="6000000" />
      <delay time="5000" />
      <enable trigger="moveLight" />
    </sequence>
  </sequences>
  <triggers>
    <trigger name="moveLight">
      <sectorvis sector="room" />
      <fire delay="0" sequence="moveLight" />
    </trigger>
  </triggers>
