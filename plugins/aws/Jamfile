SubDir TOP plugins aws ;

FILES = [ Wildcard *.cpp *.h ] ;

if $(CMD.BISON) && $(CMD.FLEX)
{
  FILES = [ Filter $(FILES) : skinlex.cpp skinpars.cpp ] 
	  skinlex.ll skinpars.yy ;
  BISON.FLAGS on [ FGristFiles skinpars.cpp ] += -p aws ;
}

Plugin aws :
	$(FILES)
;
# silence the compiler (we can't avoid the warnings in autogenerated code)
C++FLAGS on [ FGristFiles skinlex.o ] += -Wno-unused ;
LinkWith aws : csgeom csgfx cssys cstool csutil ;

Help aws : "Alternate Windowing System plug-in" ;

