SubDir TOP plugins mesh particles physics ode ;

if $(ODE.AVAILABLE) = "yes"
{
Description partphys_ode : "Particle ODE-based Physics plugin" ;
Plugin partphys_ode : [ Wildcard *.cpp *.h ] ;
LinkWith partphys_ode : crystalspace ;
ExternalLibs partphys_ode : ODE ;
if $(ODE.EXTERN_C) = "yes"
{
  CFlags partphys_ode : [ FDefines CS_USE_ODE_EXTERN_C ] ;
}
MsvcDefine partphys_ode : CS_USE_ODE_EXTERN_C ;
CompileGroups partphys_ode : meshes ;
}
