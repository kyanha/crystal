SubDir TOP plugins video canvas openglx ;

if $(GLX.AVAILABLE) = "yes" 
{
Help glx2d : "Crystal Space GL/X 2D driver" ;

Plugin glx2d
	: [ Wildcard *.cpp *.h ]
;
LinkWith glx2d : openglcommon canvascommon csgeom csutil ;
ExternalLibs glx2d :  GLX ;

CompileGroups glx2d :  drivers2d ;
CompileGroups glx2d :  openglcanvas ;

}

SubInclude TOP plugins video canvas openglx glide ;
