SubDir TOP plugins video render3d opengl ;

if $(GL.AVAILABLE) = "yes" && $(GLU.AVAILABLE) = "yes"
{
Help glrender3d : "Crystal Space Render3d OpenGL driver" ;

Plugin glrender3d
	: [ Wildcard *.cpp *.h ]
;
LinkWith glrender3d : render3dcommon csgeom csgfx csutil cstool ;
ExternalLibs glrender3d : GL GLU ;

CompileGroups glrender3d : drivers3d nrall ;

InstallConfig opengl.cfg render3d.cfg ;
}
