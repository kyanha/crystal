SubDir TOP plugins video render3d software ;

if $(CMD.NASM) && $(TARGET.PROCESSOR) = "X86"
{
  ASMFILES = [ Wildcard i386 : *.asm *.cpp *.h ] ;
}
else
{
  ASMFILES = ;
}

Plugin softrender3d :
	[ Wildcard *.cpp *.h ]
	$(ASMFILES)
;
LinkWith softrender3d : render3dcommon csgeom csgfx csutil ;

Help softrender3d : "Crystal Space software 3D renderer" ;

InstallConfig softrender3d.cfg ;

CompileGroups softrender3d :  drivers3d ;
