SubDir TOP plugins sound renderer ds3d ;

if $(DIRECTX.AVAILABLE) = "yes" 
{
Plugin sndds3d
	: [ Wildcard *.cpp *.h ]
;
LinkWith sndds3d : soundrendercommon csgeom cssys csutil ;
ExternalLibs sndds3d :  DIRECTX ;

Help sndds3d : "Crystal Space DirectSound 3D sound renderer" ;
CompileGroups sndds3d :  sounddrivers ;

}

